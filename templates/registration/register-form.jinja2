<div class="register">

    <h3>{{ gettext('Register') }}, or <a href="{{ url('login') }}">{{ gettext('Log in') }}</a></h3>

    <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
            <a href="#" class="btn btn-lg btn-primary btn-block">Facebook</a>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6">
            <a href="#" class="btn btn-lg btn-info btn-block">Google</a>
        </div>
    </div>
    <div class="login-or">
        <span class="span-or">{{ gettext('or') }}</span>
    </div>

    <form role="form" action="{{ url('register') }}">
        <div class="form-group">
            <label for="inputEmail">{{ gettext('Email') }}</label>
            <input type="email" class="form-control" id="inputEmail">
        </div>
        <div class="form-group">
            <label for="inputUsername">{{ gettext('Username') }}</label>
            <input type="text" class="form-control" id="inputUsername">
        </div>
        <div class="form-group">
            <label for="inputPassword">{{ gettext('Password') }}</label>
            <input type="password" class="form-control" id="inputPassword">
        </div>
        <div class="form-group">
            <label for="inputPassword2">{{ gettext('Repeat password') }}</label>
            <input type="password" class="form-control" id="inputPassword2">
        </div>

        <div class="checkbox pull-right">
            <label>
                <input type="checkbox">
                {{ gettext('Accept ') }}<a href="#">{{ gettext('terms and conditions') }}</a></label>
        </div>
        <button type="submit" class="btn btn btn-primary">
            {{ gettext('Register') }}
        </button>
    </form>

</div>

