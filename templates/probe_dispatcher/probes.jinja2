{% extends 'base.jinja2' %}

{% block content %}
    <h1>{{ _('Probes') }}</h1>
    {% if probes %}
        {% for probe in probes %}
            <div class="panel">
                <h2>{{ probe.name }}</h2>

                <p>{{ probe.description }}</p>

                <p>{{ _('Domain:') }} <span class="label label-info">{{ probe.domain }}</span></p>
                {% if sensors %}
                    {{ _('Enabled sensors:') }}
                    <ul>
                        {% for sensor in sensors %}
                            <li>{{ sensor.name }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                <p>{{ _('Rendered javascript:') }} {{ probe.clickable_probe_url()|safe }}</p>
                <pre class="highlight"><code class="html">{{ probe.get_script_tag() }}</code></pre>
            </div>
        {% endfor %}
    {% else %}
        <p>{{ _('You have no probes yet, create one now!') }}</p>
    {% endif %}
    <a href="#" class="btn btn-block btn-primary">{{ _('Create a new probe') }}</a>
{% endblock %}